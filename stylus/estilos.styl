@import "fonts.styl"
gris_oscuro = #333
gris_claro = #818181
crema = #FFEFBF

body
	font-family 'Varela Round', sans-serif
	font-size 16px
figure
	margin 0
	
a 
	text-decoration none

img
	vertical-align top

.action
	color white
	font-size 1.2em
	margin-right .5em
	&:last-child
		margin-right 0

.actions
	bottom 0	
	left 0
	position absolute
	right 0
	background rgba(black,.4)

.border-bottom
	border-bottom 1px solid gris_claro

.button-menu
	left .5em
	margin-top -10px
	position absolute
	top 50%

.center-block
	margin 0 auto
	
.center-text
	text-align center
		
.container
	padding 1.4rem
	font-size 0
	text-align center
	display inline-block

.descripcion
	color gris_claro
	
.header
	height 3.5em
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
.informacion
	&.small
		width 20em
.items
	display inline-block
	margin-right .5em
	
	
// .left
// 	float left
// .right
// 	float right		

.menu
	display none
	
.name
	color violet

.padding
	padding 1em

.productos
	display inline-block
	font-size 1rem //16px
	margin-bottom 1em
	margin-right 1em
	width 8rem //128px
	text-align left
	&:nth-child(even)  //busca hijos pares
		margin-right 0
	p 
		margin .5em 0	

.right-text
	text-align right

.relative
	position relative

